                            <Grid Name="EmpireGridOne" FlowDirection="LeftToRight" Background="Black"  Margin="1,1,5,5">
                                <Grid FlowDirection="LeftToRight">
                                  <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                  </Grid.RowDefinitions>
                                  <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto"/>
                                  </Grid.ColumnDefinitions>
                                  <Border Grid.Row="0"
                                          Grid.Column="0"
                                          Grid.ColumnSpan="8"
                                          BorderThickness="1"
                                          Margin="0,0,0,0"
                                          Background="Black"
                                          BorderBrush="{DynamicResource {x:Static scc:ClientResources.DisabledTextForegroundBrushKey}}" />
                                  <TextBlock Grid.Row="0"
                                             Grid.Column="1"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             FontWeight="DemiBold"
                                             Foreground="LightGreen"
                                             Text="Food: " />
                                  <scc:GameLabel Grid.Row="0"
                                                 Grid.Column="2"
                                                 VerticalAlignment="Center"
                                                 ImageSourceSmall="vfs:///Resources/Images/Resources/food.png"
                                                 Label="{Binding Path=FoodReserves.CurrentValue}"
                                                 ToolTip="{sx:LocalizedString Group={x:Static s:LocalizedTextGroups.AssetsScreen}, Entry=FOOD_TOOL_TIP}" />
                                  <scc:GameButton
                                              Name="SabotageFoodOne"
                                              Grid.Row="0"
                                              Grid.Column="3"
                                              DisplayMode="Tiny"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              FontWeight="DemiBold"
                                              Label="Sabotage Food: "
                                              Foreground="Black"
                                              Background="Transparent"
                                              BorderBrush="{DynamicResource {x:Static scc:ClientResources.DisabledTextForegroundBrushKey}}"
                                              BorderThickness="2"
                                              Click = "OnFoodOneClick"/>
                                  <TextBlock Grid.Row="0"
                                              Grid.Column="5"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              FontWeight="DemiBold"
                                              Foreground="Yellow"
                                              Text="Energy: " />
