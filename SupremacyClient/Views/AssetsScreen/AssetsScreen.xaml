                                            BorderBrush="Red" />
                                    <!-- Espionage Two Section -->
                                    <TextBlock Grid.Row="0"
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,0"
