    <scc:ThemedUserControl x:Class="Supremacy.Client.Views.AssetsScreen"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:scc="http://schemas.startreksupremacy.com/xaml/presentation"
                       xmlns:s="http://schemas.startreksupremacy.com/xaml/core"
                       xmlns:sx="http://schemas.startreksupremacy.com/xaml/core/markup"
                       xmlns:v="clr-namespace:Supremacy.Client.Views"
                       mc:Ignorable="d"
                       d:DesignHeight="768"
                       d:DesignWidth="1280"
                       d:DataContext="{d:DesignInstance Type=scc:AssetsScreenPresentationModel, IsDesignTimeCreatable=True}"
                       Foreground="{DynamicResource {x:Static scc:ClientResources.DefaultTextForegroundBrushKey}}"
                       Background="#66000000"
                       UseLayoutRounding="True"
                       Margin="6,6,6,6">

    <UserControl.Resources>
        <Style x:Key="changeColorOnExpanded" TargetType="Expander">
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

    </UserControl.Resources>
    <TabControl>
        <TabItem Header="{sx:LocalizedString Group={x:Static s:LocalizedTextGroups.AssetsScreen}, Entry=SPY_REPORT_TAB_HEADER}">
 <!-- Spy Tab and Grid just for Head line -->
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Grid.Column="0" 
                        Text="  Total Empire Intelligence:  "
                        Foreground="{DynamicResource {x:Static scc:ClientResources.DefaultTextForegroundBrushKey}}"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="1" 
                        Text="Accumulated Points = "
                        HorizontalAlignment="Right"
                        Foreground="LightGoldenrodYellow"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="2"
                        Text="{Binding Path=TotalIntelligenceAttackingAccumulated}" 
                        HorizontalAlignment="Left"
                        Foreground="OrangeRed"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="3" Text="Production Last Turn = "
                        HorizontalAlignment="Right"
                        Foreground="LightGoldenrodYellow"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <!--<TextBlock 
                        Grid.Column="3" Text=" = "
                        Foreground="{DynamicResource {x:Static scc:ClientResources.DefaultTextForegroundBrushKey}}"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="12pt"/>-->
                    <TextBlock 
                        Grid.Column="4" Text="{Binding Path=TotalIntelligenceProduction}"
                        HorizontalAlignment="Left"
                        Foreground="OrangeRed"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="5" Text="Your Accumulated Defence Points = "
                        HorizontalAlignment="Right"
                        Foreground="LightGoldenrodYellow"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="6" Text="{Binding Path=TotalIntelligenceDefenseAccumulated}" 
                        HorizontalAlignment="Left"
                        Foreground="OrangeRed"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <!--<scc:GameButton 
                        Grid.RowSpan="3"
                        Grid.Column="7"
                        Label="Fill Up Defense"            
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Width="90"
                        Height="32"
                        DisplayMode="Tiny"
                        Style="{StaticResource LCARS_StandardButtonStyle}"
                        
                        FontSize="10pt"
                        FontFamily="{StaticResource {x:Static scc:ClientResources.HeaderFontFamilyKey}}"
                        Foreground="Black"
                        Margin="0,0,0,4"
                        Command="{x:Static scc:NavigationCommands.FillUpDefense}"
                        CommandParameter="{Binding FallbackValue={x:Null}}"
                        />-->
                  <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10">
                        <Grid>     
                          <!-- Grid for Blame buttons -->
                              <Grid.RowDefinitions>
                                  <RowDefinition Height="Auto" />
                                  <RowDefinition Height="40"/>
                                  <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                              <Grid.ColumnDefinitions>
                                  <ColumnDefinition Width="Auto" />
                                  <ColumnDefinition Width="Auto" />
                                  <ColumnDefinition Width="Auto"/>
                                  <ColumnDefinition Width="Auto"/>
                                  <ColumnDefinition Width="Auto"/>
                                  <ColumnDefinition Width="Auto"/>
                                  <ColumnDefinition Width="Auto"/>
                                  <ColumnDefinition Width="*" />
                              </Grid.ColumnDefinitions>  
                              <Border Grid.Row="0"
                                      Grid.Column="0"
                                      Grid.RowSpan="3"
                                      Grid.ColumnSpan="8"
                                      BorderThickness="1"
                                      Background="Black"
                                      BorderBrush="Yellow" />
                              <TextBlock Grid.Row="0"
                                         Grid.Column="0"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left"
                                         Margin="5,5,0,0"
                                         Foreground="White"
                                         Text=" Blame someone else for your actions: " />
                              <StackPanel Name="NoOne"
                                          Orientation="Horizontal"
                                          Grid.Row="0"
                                          Grid.Column="1">
                                    <RadioButton
                                            Name="BlameNoOne"
                                            Margin="0,5,0,0"
                                            GroupName="BlameRadio"
                                            Foreground="White"
                                            Content="Do not blame anyone" />
                              </StackPanel>
                              <StackPanel Name="BlameRow"
                                          Orientation="Horizontal"
                                          Grid.Row="1"
                                          Grid.Column="0" 
                                          Grid.ColumnSpan="7"
                                          Margin="0,5,10,5">
                                    <StackPanel Name="Terroists"
                                                Orientation="Horizontal" >
                                            <Image 
                                                VerticalAlignment="Center"
                                                Source="vfs:///Resources/Images/Insignias/Sabotage.png"
                                                Margin="5,0,5,0" >
                                            </Image>
                                            <RadioButton
                                                Name="BlameTerrorists"
                                                Margin="0,5,0,0"
                                                GroupName="BlameRadio"
                                                Foreground="White"
                                                Content="Terrorists" />
                                    </StackPanel>
                                    <StackPanel Name="Federation"
                                                Orientation="Horizontal"
                                                Margin="40,0,0,0">
                                            <Image 
                                                VerticalAlignment="Center"
                                                Source="vfs:///Resources/Images/Insignias/Federation.png"
                                                Margin="5,0,5,0" >
                                            </Image>
                                            <RadioButton
                                                Name="BlameFederation"
                                                Margin="0,5,0,0"
                                                GroupName="BlameRadio"
                                                Foreground="LightBlue"
                                                Content="Federation"/>
                                    </StackPanel>
                                    <StackPanel Name="TerranEmpire"
                                                Orientation="Horizontal"
                                                Margin="40,0,0,0">
                                            <Image 
                                                VerticalAlignment="Center"
                                                Source="vfs:///Resources/Images/Insignias/TerranEmpire.png"
                                                Margin="5,0,5,0" >
                                            </Image>
                                            <RadioButton
                                                Name="BlameTerranEmpire"
                                                Margin="0,5,0,0"
                                                GroupName="BlameRadio"
                                                Foreground="Yellow"
                                                Content="Terran Empire"/>
                                    </StackPanel>
                                    <StackPanel Name="Romulans"
                                                Orientation="Horizontal"
                                                Margin="40,0,0,0">
                                            <Image 
                                                VerticalAlignment="Center"
                                                Source="vfs:///Resources/Images/Insignias/Romulans.png"
                                                Margin="5,0,5,0" >
                                            </Image>
                                            <RadioButton
                                                Name="BlameRomulans"
                                                Margin="0,5,0,0"
                                                GroupName="BlameRadio"
                                                Foreground="LightGreen"
                                                Content="Romulans"/>
                                    </StackPanel>
                                    <StackPanel Name="Klingons"
                                                Orientation="Horizontal"
                                                Margin="40,0,0,0">
                                            <Image 
                                                VerticalAlignment="Center"
                                                Source="vfs:///Resources/Images/Insignias/Klingons.png"
                                                Margin="5,0,5,0" >
                                            </Image>
                                            <RadioButton
                                                Name="BlameKlingons"
                                                Margin="0,5,0,0"
                                                GroupName="BlameRadio"
                                                Foreground="Red"
                                                Content="Klingons"/>
                                    </StackPanel>
                                    <StackPanel Name="Cardassians"
                                                Orientation="Horizontal"
                                                Margin="40,0,0,0">
                                            <Image 
                                                VerticalAlignment="Center"
                                                Source="vfs:///Resources/Images/Insignias/Cardassians.png"
                                                Margin="5,0,5,0" >
                                            </Image>
                                            <RadioButton
                                                Name="BlameCardassians"
                                                Margin="0,5,0,0"
                                                GroupName="BlameRadio"
                                                Foreground="Goldenrod"
                                                Content="Cardassianss"/>
                                    </StackPanel>
                                    <StackPanel Name="Dominion"
                                                Orientation="Horizontal"
                                                Margin="40,0,0,0">
                                            <Image 
                                                VerticalAlignment="Center"
                                                Source="vfs:///Resources/Images/Insignias/Dominion.png"
                                                Margin="5,0,5,0" >
                                            </Image>
                                            <RadioButton
                                                Name="BlameDominion"
                                                Margin="0,5,0,0"
                                                GroupName="BlameRadio"
                                                Foreground="MediumPurple"
                                                Content="Dominion"/>
                                    </StackPanel>
                                    <StackPanel Name="Borg"
                                                Orientation="Horizontal"
                                                Margin="40,0,5,0">
                                            <Image 
                                                VerticalAlignment="Center"
                                                Source="vfs:///Resources/Images/Insignias/Borg.png"
                                                Margin="5,0,5,0" >
                                            </Image>
                                            <RadioButton
                                                Name="BlameBorg"
                                                Margin="0,5,0,0"
                                                GroupName="BlameRadio"
                                                Foreground="YellowGreen"
                                                Content="Borg"/>
                                    </StackPanel>
                              </StackPanel>                                
                         </Grid>
                  </StackPanel>
                  <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="9">
                    <Grid>     
                      <!-- Grid for explanation and summary buttons -->
                          <Grid.RowDefinitions>
                              <RowDefinition Height="38" />
                              <RowDefinition Height="Auto"/>
                          </Grid.RowDefinitions>
                          <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="Auto" />
                              <ColumnDefinition Width="Auto" />
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="10"/>
                              <ColumnDefinition Width="*"/>
                          </Grid.ColumnDefinitions>  
                          <TextBlock 
                                Grid.Row="0" 
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="  To spy on a major Empire below: "
                                Foreground="Yellow"
                                FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                                FontSize="12pt"/> 
                          <TextBlock 
                                Grid.Row="0"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Send a Spy Ship to the Empire's system then right click the ship to order "
                                Foreground="LightGray"
                                FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                                FontSize="12pt"/>   
                          <TextBlock 
                                Grid.Row="0" 
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Text="&quot;Install a Spy Network&quot;"
                                Foreground="White"
                                FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                                FontSize="12pt"/> 
                      <!-- Summary Button -->
                          <Button x:Name="SummaryButton"
                                  Grid.Row="0"
                                  Grid.Column="4"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Width="250"
                                  Height="32"
                                  Style="{StaticResource LCARS_StandardButtonStyle}"
                                  Content="Click for Turn Summary"
                                  FontSize="14pt"
                                  FontFamily="{StaticResource {x:Static scc:ClientResources.HeaderFontFamilyKey}}"
                                  Foreground="Black"
                                  Margin="5,5,0,5"
                                  Command="{x:Static scc:ClientCommands.ShowEndOfTurnSummary}">
                         </Button>
                     </Grid>
                  </StackPanel>
              </Grid>
                <ScrollViewer 
                    VerticalScrollBarVisibility="Visible"
                    Margin="5,0,0,0"
                    Width="Auto"
                    Height="800"
                    FlowDirection="RightToLeft"
                    HorizontalAlignment="left">
                    <StackPanel Height="1400" Margin="5,0,0,0">
        <!-- One Expander -->
                        <Expander x:Name="EmpireExpanderOne" Background="Black" FlowDirection="LeftToRight" Style="{StaticResource changeColorOnExpanded}"
                                 IsExpanded="True" Header="{Binding Path=SpiedOneCivName}" FontSize="20" BorderThickness="2" BorderBrush="Gray" Foreground="LightYellow" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.ColumnSpan="4" >
                            <Grid Name="EmpireGridOne" FlowDirection="LeftToRight" Background="Black"  Margin="1,1,5,5" HorizontalAlignment="Center">
                                <Grid FlowDirection="LeftToRight">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="45" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="16"
                                            BorderThickness="1"
                                            Margin="10,0,0,0"
                                            Background="Black"
                                            BorderBrush="Red" />
                                    <!-- Espionage One Section -->
                                    <StackPanel Grid.Row="0"
                                                Grid.Column="0"
                                                Orientation="Horizontal">
                                        <Image Name="InsigniaOne">
                                        </Image>
                                        <TextBlock
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,0"
                                             FontWeight="DemiBold"
                                             Foreground="White"
                                             Text="Espionage" />
                                    </StackPanel>
                                    <TextBlock Grid.Row="0"
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                FontWeight="DemiBold"
                                                Foreground="LightBlue"
                                                Text="Research: " />
                                    <scc:GameLabel Grid.Row="0"
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    ImageSourceSmall="vfs:///Resources/Images/ScreenIcons/research.png"
                                                    Label="{Binding Path=NetEnergy}"
                                                    ToolTip="{sx:LocalizedString Group={x:Static s:LocalizedTextGroups.AssetsScreen}, Entry=ENERGY_TOOL_TIP}" />
                                    <scc:GameButton
                                                Name="StealResearchOne"
                                                Grid.Row="0"
                                                Grid.Column="3"
                                                DisplayMode="Tiny"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Label="Steal Research"
                                                FontWeight="DemiBold"
                                                Foreground="Black"
                                                Background="Transparent"
                                                BorderBrush="{DynamicResource {x:Static scc:ClientResources.DisabledTextForegroundBrushKey}}"
                                                BorderThickness="2"
                                                Click = "OnResearchOneClick"
                                                Margin="0,0,15,0"/>
                                    <TextBlock Grid.Row="0"
                                                Grid.Column="5"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                FontWeight="DemiBold"
                                                Foreground="LightGreen"
                                                Text="Food: " />
                                    <scc:GameLabel Grid.Row="0"
                                                    Grid.Column="6"
                                                    VerticalAlignment="Center"
                                                    ImageSourceSmall="vfs:///Resources/Images/Resources/food.png"
                                                    Label="{Binding Path=FoodReserves.CurrentValue}"
                                                    ToolTip="{sx:LocalizedString Group={x:Static s:LocalizedTextGroups.AssetsScreen}, Entry=FOOD_TOOL_TIP}" />
                                    <scc:GameButton Name="SabotageFoodOne"      
                                                    Grid.Row="0"
                                                    Grid.Column="7"
                                                    DisplayMode="Tiny"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    FontWeight="DemiBold"
                                                    Label="Sabotage Food"
