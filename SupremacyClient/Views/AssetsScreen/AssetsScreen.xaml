                                                Grid.Column="3"
                                                DisplayMode="Tiny"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Label="Steal Research"
                                                FontWeight="DemiBold"
                                                Foreground="Black"
                                                Background="Transparent"
                                                BorderBrush="{DynamicResource {x:Static scc:ClientResources.DisabledTextForegroundBrushKey}}"
