    <scc:ThemedUserControl x:Class="Supremacy.Client.Views.AssetsScreen"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:scc="http://schemas.startreksupremacy.com/xaml/presentation"
                       xmlns:s="http://schemas.startreksupremacy.com/xaml/core"
                       xmlns:sx="http://schemas.startreksupremacy.com/xaml/core/markup"
                       xmlns:v="clr-namespace:Supremacy.Client.Views"
                       mc:Ignorable="d"
                       d:DesignHeight="768"
                       d:DesignWidth="1280"
                       d:DataContext="{d:DesignInstance Type=scc:AssetsScreenPresentationModel, IsDesignTimeCreatable=True}"
                       Foreground="{DynamicResource {x:Static scc:ClientResources.DefaultTextForegroundBrushKey}}"
                       Background="#66000000"
                       UseLayoutRounding="True"
                       Margin="6,6,6,6">

    <UserControl.Resources>
        <Style x:Key="changeColorOnExpanded" TargetType="Expander">
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

    </UserControl.Resources>
    <TabControl>
        <TabItem Header="{sx:LocalizedString Group={x:Static s:LocalizedTextGroups.AssetsScreen}, Entry=SPY_REPORT_TAB_HEADER}">
 <!-- Spy Tab and Grid just for Head line -->
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Grid.Column="0" 
                        Text="  Total Empire Intelligence:  "
                        Foreground="{DynamicResource {x:Static scc:ClientResources.DefaultTextForegroundBrushKey}}"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="1" 
                        Text=" > Attacking (Accumulated):  "
                        Foreground="Red"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="2"
                        Text="{Binding Path=TotalIntelligenceAttackingAccumulated}" 
                        Foreground="Orange"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="3" Text=" > Production (last Turn):  "
                        Foreground="Green"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <!--<TextBlock 
                        Grid.Column="3" Text=" = "
                        Foreground="{DynamicResource {x:Static scc:ClientResources.DefaultTextForegroundBrushKey}}"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="12pt"/>-->
                    <TextBlock 
                        Grid.Column="4" Text="{Binding Path=TotalIntelligenceProduction}" 
                        Foreground="LightGreen"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="5" Text=" > Own Defense (Accumulated) = "
                        Foreground="SteelBlue"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <TextBlock 
                        Grid.Column="6" Text="{Binding Path=TotalIntelligenceDefenseAccumulated}" 
                        Foreground="LightBlue"
                        FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                        FontSize="14pt"/>
                    <!--<scc:GameButton 
                        Grid.RowSpan="3"
                        Grid.Column="7"
                        Label="Fill Up Defense"            
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Width="90"
                        Height="32"
                        DisplayMode="Tiny"
                        Style="{StaticResource LCARS_StandardButtonStyle}"
                        
                        FontSize="10pt"
                        FontFamily="{StaticResource {x:Static scc:ClientResources.HeaderFontFamilyKey}}"
                        Foreground="Black"
                        Margin="0,0,0,4"
                        Command="{x:Static scc:NavigationCommands.FillUpDefense}"
                        CommandParameter="{Binding FallbackValue={x:Null}}"
                        />-->
                  <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="9">
                    <Grid>     
                      <!-- Grid for Blame buttons -->
                          <Grid.RowDefinitions>
                              <RowDefinition Height="40" />
                              <RowDefinition Height="Auto"/>
                          </Grid.RowDefinitions>
                          <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="Auto" />
                              <ColumnDefinition Width="Auto" />
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="*" />
                          </Grid.ColumnDefinitions>  
                            <Border Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="8"
                                    BorderThickness="1"
                                    Background="Black"
                                    BorderBrush="Yellow" />
                          <TextBlock Grid.Row="0"
                                      Grid.Column="0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Margin="5,0,0,0"
                                      FontWeight="DemiBold"
                                      Foreground="White"
                                      Text="Implicate others for your actions: " />
                          <StackPanel Name="BlameRow"
                                  Orientation="Horizontal"
                                  Grid.Row="0"
                                  Grid.Column="1" 
                                  Grid.ColumnSpan="7">
                            <StackPanel Name="BlameTerroists"
                                        Orientation="Horizontal" >
                                  <Image 
                                        VerticalAlignment="Center"
                                        Source="vfs:///Resources/Images/Insignias/Klingons.png"
                                        Margin="5,0,5,0" >
                                  </Image>
                                  <RadioButton
                                        Margin="0,5,0,0"
                                        GroupName="BlameRadio"
                                        Foreground="White">
                                           Terrorists
                                  </RadioButton>
                            </StackPanel>
                            <StackPanel Name="BlameKlingons"
                                        Orientation="Horizontal" >
                                  <Image 
                                        VerticalAlignment="Center"
                                        Source="vfs:///Resources/Images/Insignias/Klingons.png"
                                        Margin="5,0,5,0" >
                                  </Image>
                                  <RadioButton
                                        Margin="0,5,0,0"
                                        GroupName="BlameRadio"
                                        Foreground="Red">
                                           Klingons
                                  </RadioButton>
                            </StackPanel>
                      </StackPanel>                    
                          <!--<scc:GameButton
                                        Name="BlameFour"
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        DisplayMode="Tiny"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Label="Blame Four"
                                        FontWeight="DemiBold"
                                        Foreground="Black"
                                        Background="Transparent"
                                        BorderBrush="{DynamicResource {x:Static scc:ClientResources.DisabledTextForegroundBrushKey}}"
                                        BorderThickness="2"
                                        Click = "OnBlameFourClick"
                                        Margin="5,0,5,0"/>-->                    
                          </Grid>
                      </StackPanel>
                  <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="9">
                    <Grid>     
                      <!-- Grid for explanation and summary buttons -->
                          <Grid.RowDefinitions>
                              <RowDefinition Height="34" />
                              <RowDefinition Height="Auto"/>
                          </Grid.RowDefinitions>
                          <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="Auto" />
                              <ColumnDefinition Width="Auto" />
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="10"/>
                              <ColumnDefinition Width="Auto"/>
                          </Grid.ColumnDefinitions>  
                          <TextBlock 
                                Grid.Row="0" 
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="  To see a major Empire below: "
                                Foreground="Yellow"
                                FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                                FontSize="12pt"/> 
                          <TextBlock 
                                Grid.Row="0"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Send a Spy Ship to the Empire's system then right click it to order "
                                Foreground="LightGray"
                                FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                                FontSize="12pt"/>   
                          <TextBlock 
                                Grid.Row="0" 
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Text="&quot;Install a Spy Network&quot;"
                                Foreground="White"
                                FontFamily="{DynamicResource {x:Static scc:ClientResources.DefaultFontFamilyKey}}"
                                FontSize="12pt"/> 
                      <!-- Summary Button -->
                          <Button x:Name="SummaryButton"
                                  Grid.Row="0"
                                  Grid.Column="4"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Width="230"
                                  Height="32"
                                  Style="{StaticResource LCARS_StandardButtonStyle}"
                                  Content="Click for Summary"
                                  FontSize="14pt"
                                  FontFamily="{StaticResource {x:Static scc:ClientResources.HeaderFontFamilyKey}}"
                                  Foreground="Black"
                                  Margin="5,0,0,4"
                                  Command="{x:Static scc:ClientCommands.ShowEndOfTurnSummary}">
                         </Button>
                     </Grid>
                  </StackPanel>
              </Grid>
                <ScrollViewer 
                    VerticalScrollBarVisibility="Visible"
                    Margin="5,0,0,0"
                    Width="Auto"
                    Height="800"
                    FlowDirection="RightToLeft"
                    HorizontalAlignment="left">
                    <StackPanel Height="1400" Margin="5,0,0,0">
 <!-- One Expander -->
