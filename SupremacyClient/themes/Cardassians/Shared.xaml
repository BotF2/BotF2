                                    <Border Grid.Column="2"
                          Grid.Row="0"
                          CornerRadius="0,14,0,0"
                          Background="{StaticResource LCARS_PurpleGradient_TopLeft_BottomRight}" />
                                    <Border Grid.Column="2"
                          Grid.Row="2"
                          CornerRadius="0,0,14,0"
                          Background="{StaticResource LCARS_PurpleGradient_TopLeft_BottomRight}" />
                                    <Border Grid.Column="0"
                          Grid.Row="2"
                          CornerRadius="0,0,0,14"
                          Background="{StaticResource LCARS_PurpleGradient_TopLeft_BottomRight}" />
                                    <Border Grid.Column="0"
                          Grid.Row="1"
                          Margin="0,2,0,2"
