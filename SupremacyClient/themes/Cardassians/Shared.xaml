                                    <Border Grid.Column="2"
                          Grid.Row="1"
                          Margin="0,2,0,2"
                          Background="{StaticResource LCARS_OrangeGradient_Left_Right}" />
                                    <Border Grid.Column="1"
                          Grid.Row="0"
                          Margin="2,0,2,0"
                          Background="{StaticResource LCARS_OrangeGradient_Top_Bottom}" />
                                    <Border Grid.Column="1"
                          Grid.Row="2"
                          Margin="2,0,2,0"
                          Background="{StaticResource LCARS_OrangeGradient_Top_Bottom}" />
                                    <ScrollViewer Grid.Column="1"
                                Grid.Row="1"
                                Margin="2,2,2,0"
                                SnapsToDevicePixels="True">
