<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:scc="http://schemas.startreksupremacy.com/xaml/presentation">

  <Style x:Key="{x:Static scc:ClientResources.DialogContainerStyleKey}"
         TargetType="{x:Type ContentControl}"
         BasedOn="{StaticResource LCARS_CardThinBorderStyle}" />

  <Style x:Key="{x:Static scc:ClientResources.MessageDialogButtonStyleKey}"
         TargetType="{x:Type Button}"
         BasedOn="{StaticResource LCARS_StandardButtonStyle}" />

</ResourceDictionary>