  <Style TargetType="{x:Type scc:InfoCard}">
    <Style.Resources>
      
      <FontFamily x:Key="{x:Static scc:ClientResources.HeaderFontFamilyKey}">pack:///siteoforigin:,,,/Resources/Fonts/#Calibri</FontFamily>
      <FontFamily x:Key="{x:Static scc:ClientResources.DefaultFontFamilyKey}">pack://siteoforigin:,,,/Resources/Fonts/#Calibri</FontFamily>
      
      <sys:Double x:Key="{x:Static scc:ClientResources.HeaderFontSizeKey}">12</sys:Double>
      <sys:Double x:Key="{x:Static scc:ClientResources.DefaultFontSizeKey}">12</sys:Double>

      <FontWeight x:Key="{x:Static scc:ClientResources.HeaderFontWeightKey}">Bold</FontWeight>
      <FontWeight x:Key="{x:Static scc:ClientResources.DefaultFontWeightKey}">Normal</FontWeight>
      
      <SolidColorBrush x:Key="{x:Static scc:ClientResources.HeaderTextForegroundBrushKey}"
                       Color="#c0c0c0" />
      <SolidColorBrush x:Key="{x:Static scc:ClientResources.DefaultTextForegroundBrushKey}"
                       Color="#ffffff" />
      
      <Style x:Key="BaseButtonStyle"
             TargetType="ButtonBase">
        <Setter Property="Foreground"
                Value="#e0e0e0" />
        <Setter Property="Background">
          <Setter.Value>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="0,1">
              <GradientStop Offset="0"
                            Color="#646464" />
              <GradientStop Offset="1"
                            Color="#353535" />
              <!--
            <GradientStop Offset="0"
                          Color="#343434" />
            <GradientStop Offset="0.5"
                          Color="#272727" />
            <GradientStop Offset="0.5"
                          Color="#020202" />
            <GradientStop Offset="1"
                          Color="#000000" />
-->
            </LinearGradientBrush>
          </Setter.Value>
        </Setter>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="ButtonBase">
              <Border x:Name="OuterBorder"
                      BorderThickness="1"
                      Background="{TemplateBinding Background}">
                <Border.BorderBrush>
                  <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="0,1">
                    <GradientStop Offset="0"
                                  Color="#0d0d0d" />
                    <GradientStop Offset="0.5"
                                  Color="#151515" />
                    <GradientStop Offset="1"
                                  Color="#121212" />
                  </LinearGradientBrush>
                </Border.BorderBrush>
                <Border x:Name="InnerBorder"
                        BorderThickness="1">
                  <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="0,1">
                      <GradientStop Offset="0"
                                    Color="#7c7c7c" />
                      <GradientStop Offset="0.5"
                                    Color="#2a2a2a" />
                      <GradientStop Offset="1"
                                    Color="#121212" />
                    </LinearGradientBrush>
                  </Border.BorderBrush>
                  <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Margin="{TemplateBinding Padding}" />
                </Border>
              </Border>
              <ControlTemplate.Triggers>
                  <Trigger Property="IsPressed"
                         Value="True">
                  <Setter Property="Background">
                    <Setter.Value>
                      <LinearGradientBrush StartPoint="0,1"
                                           EndPoint="0,0">
                        <GradientStop Offset="0"
                                      Color="#646464" />
                        <GradientStop Offset="1"
                                      Color="#353535" />
                      </LinearGradientBrush>
                    </Setter.Value>
                  </Setter>
                  <Setter TargetName="OuterBorder"
                          Property="BorderBrush">
                    <Setter.Value>
                      <LinearGradientBrush StartPoint="0,1"
                                           EndPoint="0,0">
                        <GradientStop Offset="0"
                                      Color="#0d0d0d" />
                        <GradientStop Offset="0.5"
                                      Color="#151515" />
                        <GradientStop Offset="1"
                                      Color="#121212" />
                      </LinearGradientBrush>
                    </Setter.Value>
                  </Setter>
                  <Setter TargetName="InnerBorder"
                          Property="BorderBrush">
                    <Setter.Value>
                      <LinearGradientBrush StartPoint="0,1"
                                           EndPoint="0,0">
                        <GradientStop Offset="0"
                                      Color="#7c7c7c" />
                        <GradientStop Offset="0.5"
                                      Color="#2a2a2a" />
                        <GradientStop Offset="1"
                                      Color="#121212" />
                      </LinearGradientBrush>
                    </Setter.Value>
                  </Setter>

                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="TitleBarButtonStyle"
             TargetType="ButtonBase">
        <Setter Property="Foreground"
                Value="#e0e0e0" />
        <Setter Property="Background">
          <Setter.Value>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="0,1">
              <GradientStop Offset="0"
                            Color="#646464" />
              <GradientStop Offset="1"
                            Color="#353535" />
              <!--
            <GradientStop Offset="0"
                          Color="#343434" />
            <GradientStop Offset="0.5"
                          Color="#272727" />
            <GradientStop Offset="0.5"
                          Color="#020202" />
            <GradientStop Offset="1"
                          Color="#000000" />
-->
            </LinearGradientBrush>
          </Setter.Value>
        </Setter>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="ButtonBase">
              <Border x:Name="OuterBorder"
                      BorderThickness="1"
                      Background="{TemplateBinding Background}">
                <Border.BorderBrush>
                  <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="0,1">
                    <GradientStop Offset="0"
                                  Color="#0d0d0d" />
                    <GradientStop Offset="0.5"
                                  Color="#151515" />
                    <GradientStop Offset="1"
                                  Color="#121212" />
                  </LinearGradientBrush>
                </Border.BorderBrush>
                <Border x:Name="InnerBorder"
                        BorderThickness="1">
                  <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="0,1">
                      <GradientStop Offset="0"
                                    Color="#7c7c7c" />
                      <GradientStop Offset="0.5"
                                    Color="#2a2a2a" />
                      <GradientStop Offset="1"
                                    Color="#121212" />
                    </LinearGradientBrush>
                  </Border.BorderBrush>
                  <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Margin="{TemplateBinding Padding}" />
                </Border>
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="False">
                  <Setter TargetName="OuterBorder"
                          Property="Background"
                          Value="Transparent" />
                  <Setter TargetName="OuterBorder"
                          Property="BorderBrush"
                          Value="Transparent" />
                  <Setter TargetName="InnerBorder"
                          Property="BorderBrush"
                          Value="Transparent" />
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                  <Setter Property="Background">
                    <Setter.Value>
                      <LinearGradientBrush StartPoint="0,1"
                                           EndPoint="0,0">
                        <GradientStop Offset="0"
                                      Color="#646464" />
                        <GradientStop Offset="1"
                                      Color="#353535" />
                      </LinearGradientBrush>
                    </Setter.Value>
                  </Setter>
                  <Setter TargetName="OuterBorder"
                          Property="BorderBrush">
                    <Setter.Value>
                      <LinearGradientBrush StartPoint="0,1"
                                           EndPoint="0,0">
                        <GradientStop Offset="0"
                                      Color="#0d0d0d" />
                        <GradientStop Offset="0.5"
                                      Color="#151515" />
                        <GradientStop Offset="1"
                                      Color="#121212" />
                      </LinearGradientBrush>
                    </Setter.Value>
                  </Setter>
                  <Setter TargetName="InnerBorder"
                          Property="BorderBrush">
                    <Setter.Value>
                      <LinearGradientBrush StartPoint="0,1"
                                           EndPoint="0,0">
                        <GradientStop Offset="0"
                                      Color="#7c7c7c" />
                        <GradientStop Offset="0.5"
                                      Color="#2a2a2a" />
                        <GradientStop Offset="1"
                                      Color="#121212" />
                      </LinearGradientBrush>
                    </Setter.Value>
                  </Setter>

                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>

      <Style TargetType="Button"
             BasedOn="{StaticResource BaseButtonStyle}" />
      <Style TargetType="ToggleButton"
             BasedOn="{StaticResource BaseButtonStyle}" />
      <Style TargetType="{x:Type TabItem}">
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="FontSize"
                Value="8pt" />
        <Setter Property="Padding"
                Value="8,4" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type TabItem}">
              <Grid>
                <Border x:Name="Fill"
                        BorderThickness="0,1,0,0"
                        BorderBrush="#494949">
                  <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="0,1">
                      <GradientStop Offset="0.0"
                                    Color="#000000" />
                      <GradientStop Offset="0.5"
                                    Color="#0a0a0a" />
                      <GradientStop Offset="1.0"
                                    Color="#131313" />
                    </LinearGradientBrush>
                  </Border.Background>
                </Border>
                <Rectangle Width="1"
                           HorizontalAlignment="Right">
                  <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="0,1">
                      <GradientStop Offset="0"
                                    Color="#494949" />
                      <GradientStop Offset="1"
                                    Color="#00494949" />
                    </LinearGradientBrush>
                  </Rectangle.Fill>
                </Rectangle>
                <ContentPresenter ContentSource="Header"
                                  Margin="{TemplateBinding Padding}" />
              </Grid>
              <ControlTemplate.Triggers>
                <Trigger Property="IsSelected"
                         Value="True">
                  <Setter TargetName="Fill"
                          Property="Background"
                          Value="Transparent" />
                  <Setter TargetName="Fill"
                          Property="BorderBrush"
                          Value="Transparent" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style TargetType="{x:Type TabControl}">
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Padding"
                Value="5" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type TabControl}">
              <DockPanel LastChildFill="True">
                <Border DockPanel.Dock="Bottom">
                  <DockPanel DockPanel.Dock="Bottom"
                             LastChildFill="True">
                    <TabPanel DockPanel.Dock="Left"
                              IsItemsHost="True" />
                    <Border BorderThickness="0,1,0,0"
                            BorderBrush="#494949">
                      <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="0,1">
                          <GradientStop Offset="0.0"
                                        Color="#000000" />
                          <GradientStop Offset="0.5"
                                        Color="#0a0a0a" />
                          <GradientStop Offset="1.0"
                                        Color="#131313" />
                        </LinearGradientBrush>
                      </Border.Background>
                    </Border>
                  </DockPanel>
                </Border>
                <Border Padding="{TemplateBinding Padding}">
                  <ListBox ItemsSource="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Items}"
                           SelectedItem="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SelectedItem, Mode=TwoWay}">
                    <ListBox.Template>
                      <ControlTemplate TargetType="{x:Type ListBox}">
                        <Border>
                          <ItemsPresenter />
                        </Border>
                      </ControlTemplate>
                    </ListBox.Template>
                    <ListBox.ItemsPanel>
                      <ItemsPanelTemplate>
                        <Grid />
                      </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                      <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Template">
                          <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                              <ContentPresenter />
                            </ControlTemplate>
                          </Setter.Value>
                        </Setter>
                      </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                      <DataTemplate DataType="{x:Type TabItem}">
                        <ContentPresenter x:Name="ContentSite"
                                          ContentTemplate="{x:Null}"
                                          Content="{Binding Path=Content}"
                                          Visibility="Hidden" />
                        <DataTemplate.Triggers>
                          <DataTrigger Binding="{Binding Path=IsSelected}"
                                       Value="True">
                            <Setter TargetName="ContentSite"
                                    Property="Visibility"
                                    Value="Visible" />
                          </DataTrigger>
                        </DataTemplate.Triggers>
                      </DataTemplate>
                    </ListBox.ItemTemplate>
                  </ListBox>
                </Border>
              </DockPanel>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </Style.Resources>
    <Setter Property="Foreground"
            Value="#ffffff" />
    <Setter Property="Padding"
            Value="5" />
    <Setter Property="Opacity"
            Value="1.0" />
    <Setter Property="HorizontalContentAlignment"
            Value="Stretch" />
    <Setter Property="VerticalContentAlignment"
            Value="Stretch" />
    <Setter Property="Width"
            Value="250" />
    <Setter Property="CanPin"
            Value="False" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type scc:InfoCard}">
          <!--<Border BorderThickness="1"
                  CornerRadius="4"
                  Padding="1"
                  SnapsToDevicePixels="True">
            <Border.Background>
              <LinearGradientBrush StartPoint="0,0"
                                   EndPoint="0,1">
                <GradientStop Offset="0"
                              Color="#000000" />
                <GradientStop Offset="0.5"
                              Color="#171717" />
                <GradientStop Offset="0.5"
                              Color="#151515" />
                <GradientStop Offset="1"
                              Color="#0b0b0b" />
              </LinearGradientBrush>
            </Border.Background>-->
            <DockPanel LastChildFill="True">
              <Border x:Name="HeaderOuterBorder"
                      DockPanel.Dock="Top"
                      BorderThickness="1,1,1,0"
                      CornerRadius="3,3,0,0"
                      SnapsToDevicePixels="True">
                <Border.Background>
                  <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="0,1">
                    <GradientStop Offset="0"
                                  Color="#2c2c2c" />
                    <GradientStop Offset="1"
                                  Color="#0c0c0c" />
                    <!--
                      <GradientStop Offset="0" Color="#2d2d2d" />
                      <GradientStop Offset="0.5" Color="#171717" />
                      <GradientStop Offset="0.5" Color="#010101" />
                      <GradientStop Offset="1" Color="#000000" />
                      -->
                  </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                  <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="0,1">

                    <GradientStop Offset="0"
                                  Color="#646464" />
                    <GradientStop Offset="1"
                                  Color="#4e4e4e" />
                    <!--
                      <GradientStop Offset="0" Color="#656565" />
                      <GradientStop Offset="0.5" Color="#525252" />
                      <GradientStop Offset="0.5" Color="#494949" />
                      <GradientStop Offset="1" Color="#494949" />
                      -->
                  </LinearGradientBrush>
                </Border.BorderBrush>
                <Border x:Name="HeaderInnerBorder"
                        BorderThickness="1,1,1,0"
                        CornerRadius="2,2,0,0"
                        SnapsToDevicePixels="True">
                  <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="0,1">
                      <GradientStop Offset="0"
                                    Color="#2c2c2c" />
                      <GradientStop Offset="1"
                                    Color="#222222" />
                      <!--
                        <GradientStop Offset="0" Color="#3f3f3f" />
                        <GradientStop Offset="0.5" Color="#2b2b2b" />
                        <GradientStop Offset="0.5" Color="#181818" />
                        <GradientStop Offset="1" Color="#0d0d0d" />
                        -->
                    </LinearGradientBrush>
                  </Border.BorderBrush>
                  <Grid>
                    <Grid.RowDefinitions>
                      <RowDefinition Height="*" />
                      <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                      </Grid.ColumnDefinitions>
                      <StackPanel Grid.Column="1"
                                  Orientation="Horizontal"
                                  VerticalAlignment="Top">
                        <ToggleButton Style="{StaticResource TitleBarButtonStyle}"
                                      IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsPinned, Mode=TwoWay}"
                                      Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CanPin, Converter={StaticResource BooleanToVisibilityConverter}}"
                                      VerticalAlignment="Top"
                                      Width="20"
                                      Height="20"
                                      Margin="0,3,0,3">
                          <Rectangle x:Name="PinGlyph"
                                     Width="16"
                                     Height="16"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="{StaticResource UnpinnedGlyph}" />
                        </ToggleButton>
                        <Button Command="{x:Static scc:InfoCard.CloseCommand}"
                                Style="{StaticResource TitleBarButtonStyle}"
                                VerticalAlignment="Top"
                                Width="20"
                                Height="20"
                                Margin="0,3,3,3">
                          <Path x:Name="CloseGlyph"
                                Width="8"
                                Height="8"
                                Stretch="None"
                                Stroke="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Foreground}"
                                StrokeThickness="2"
                                StrokeStartLineCap="Triangle"
                                StrokeEndLineCap="Triangle"
                                SnapsToDevicePixels="True"
                                Data="M 0,0 L 8,8 M 0,8 L 8,0" />
                        </Button>
                      </StackPanel>
                      <ContentPresenter x:Name="HeaderSite"
                                        Grid.Row="0"
                                        Margin="5"
                                        ContentSource="Header" />
                    </Grid>
                    <DockPanel x:Name="FooterSite"
                               Grid.Row="1"
                               LastChildFill="True"
                               Margin="5,0,3,3">
                      <ToggleButton x:Name="ExpansionButton"
                                    DockPanel.Dock="Right"
                                    Height="20"
                                    Width="20"
                                    IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsExpanded, Mode=TwoWay}"
                                    Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=HasContent, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Path x:Name="ExpansionGlyph"
                              Fill="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Foreground}"
                              StrokeLineJoin="Miter"
                              StrokeStartLineCap="Triangle"
                              StrokeEndLineCap="Triangle"
                              Data="M 0,5 L 4,0 L 8,5 Z" />
                      </ToggleButton>
                      <ContentPresenter ContentSource="Footer" />
                    </DockPanel>
                  </Grid>
