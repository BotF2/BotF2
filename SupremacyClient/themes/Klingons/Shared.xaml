                            <Rectangle Grid.Column="2"
                         Grid.Row="3"
                         Fill="{StaticResource Kling2Gradient_Top_Bottom}"
                         Margin="3,0,0,0"
                         Height="28"
                         Stretch="Fill" />
                            <Rectangle Grid.Column="3"
                         Grid.Row="3"
                         Width="21"
                         Height="28"
                         VerticalAlignment="Top"
                         Margin="3,0,0,0">
                                <Rectangle.Fill>
                                    <DrawingBrush>
                                        <DrawingBrush.Drawing>
                                            <GeometryDrawing PresentationOptions:Freeze="True"
                                       Brush="{StaticResource KlingYellow1Gradient_TopLeft_BottomRight}"
                                       Geometry="F1 M 0,0L 7,0L 10,7L 21,14L 10,21L 7,28L 0,28 Z  " />
