      <DataTemplate x:Key="TechObjectNameDataTemplate"
                    DataType="{x:Type tech:TechObjectDesign}">
        <TextBlock TextWrapping="Wrap"
                   TextTrimming="CharacterEllipsis"
                   TextAlignment="Right"
                   Text="{Binding Path=Name}" />
      </DataTemplate>


