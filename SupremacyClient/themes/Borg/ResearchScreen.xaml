                                 FontSize="18pt"
                                 Foreground="{DynamicResource DefaultTextBrush}"
                                 Margin="6,0,3,0"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 Text="COLLECTIVE KNOWLEDGE"/>
