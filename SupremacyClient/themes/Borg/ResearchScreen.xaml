                    <!-- Upper-Right Edge -->
                    <DockPanel Grid.Column="5"
                               Grid.Row="0"
                               Margin="3,0,3,0"
                               LastChildFill="True"
                               >
                      <TextBlock DockPanel.Dock="Right"
                                 FontFamily="{DynamicResource {x:Static scc:ClientResources.HeaderFontFamilyKey}}"
                                 FontSize="18pt"
                                 Foreground="{DynamicResource DefaultTextBrush}"
                                 Margin="6,0,3,0"
                                 VerticalAlignment="Center"
                                 Text="COLLECTIVE KNOWLEDGE"/>
                                            <!--Part left side in front of COLLECTIVE KNOWLEDGE-->
