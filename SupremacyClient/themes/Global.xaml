         TargetType="{x:Type ToggleButton}">
    <Setter Property="KeyboardNavigation.IsTabStop"
            Value="False" />
    <Setter Property="Focusable"
            Value="False" />
    <Setter Property="FocusVisualStyle"
            Value="{x:Null}" />
    <Setter Property="Width"
            Value="16" />
    <Setter Property="Height"
            Value="16" />
