  <Style TargetType="{x:Type ScrollBar}">
    <Setter Property="Stylus.IsFlicksEnabled"
            Value="false" />
    <Setter Property="Background"
            Value="{StaticResource LCARS_GrayGradient_Left_Right}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ScrollBar}">
          <Grid x:Name="GridRoot"
                Width="8">
            <Grid.RowDefinitions>
              <RowDefinition MaxHeight="8" />
              <RowDefinition Height="0.00001*" />
              <RowDefinition MaxHeight="8" />
            </Grid.RowDefinitions>

            <RepeatButton x:Name="DecreaseRepeat"
                          Style="{StaticResource ScrollBarRepeatButtonStyle}"
                          Command="ScrollBar.LineUpCommand">
              <Grid>
                <Path x:Name="DecreaseArrow"
                      Data="M 0 4 L 8 4 L 4 0 Z"
                      Width="8"
                      Height="4"
                      Margin="0,2,0,2"
                      Fill="{Binding Path=Foreground, ElementName=DecreaseRepeat}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center" />
              </Grid>
            </RepeatButton>

            <!-- Track is a special layout container which sizes the thumb and the repeat button which do jump scrolling either side of it -->
            <Border Grid.Row="1"
                    Background="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}">
              <Track x:Name="PART_Track"
                     Grid.Row="1"
                     Orientation="Vertical"
                     IsDirectionReversed="true">
                <Track.Thumb>
                  <Thumb Style="{StaticResource ScrollBarThumbStyle}" />
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                  <RepeatButton x:Name="PageUp"
                                Style="{StaticResource ScrollBarTrackRepeatButtonStyle}"
                                Command="ScrollBar.PageDownCommand" />
                </Track.IncreaseRepeatButton>
                <Track.DecreaseRepeatButton>
                  <RepeatButton x:Name="PageDown"
                                Style="{StaticResource ScrollBarTrackRepeatButtonStyle}"
                                Command="ScrollBar.PageUpCommand" />
                </Track.DecreaseRepeatButton>
              </Track>

            </Border>

            <RepeatButton Grid.Row="2"
                          x:Name="IncreaseRepeat"
                          Style="{StaticResource ScrollBarRepeatButtonStyle}"
                          Command="ScrollBar.LineDownCommand">
              <Grid>
                <Path x:Name="IncreaseArrow"
                      Data="M 0 0 L 4 4 L 8 0 Z"
                      Width="8"
                      Height="4"
                      Margin="0,2,0,2"
                      Fill="{Binding Path=Foreground, ElementName=IncreaseRepeat}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center" />
              </Grid>
            </RepeatButton>
          </Grid>

          <!-- This uses a single template for ScrollBar and rotate it to be Horizontal
          It also changes the commands so that the it does Left and Right instead of Up and Down Commands -->
          <ControlTemplate.Triggers>
            <Trigger Property="Orientation"
                     Value="Horizontal">

              <!-- Rotate the ScrollBar from Vertical to Horizontal -->
              <Setter Property="LayoutTransform"
                      TargetName="GridRoot">
                <Setter.Value>
                  <TransformGroup>
                    <RotateTransform Angle="-90" />
                    <ScaleTransform ScaleX="1.0"
                                    ScaleY="-1.0" />
                  </TransformGroup>
                </Setter.Value>
              </Setter>

              <!-- Track is bound to Orientation internally, so we need to rotate it back to Vertical -->
              <Setter TargetName="PART_Track"
                      Property="Orientation"
                      Value="Vertical" />

              <!-- Change the commands to do Horizontal commands -->
              <Setter Property="Command"
                      Value="ScrollBar.LineLeftCommand"
                      TargetName="DecreaseRepeat" />
              <Setter Property="Command"
                      Value="ScrollBar.LineRightCommand"
                      TargetName="IncreaseRepeat" />
              <Setter Property="Command"
                      Value="ScrollBar.PageLeftCommand"
                      TargetName="PageDown" />
              <Setter Property="Command"
                      Value="ScrollBar.PageRightCommand"
                      TargetName="PageUp" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

