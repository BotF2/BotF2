<UserControl x:Class="Supremacy.Client.SitRepListView"
             xmlns="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Supremacy.Client">
  <Grid>
    <ListBox x:Name="SitRepListBox"
             DisplayMemberPath="HeaderText"
             ItemsSource="{Binding Path=AppContext.LocalPlayerEmpire.SitRepEntries, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:SitRepListView}}}"
             MouseDoubleClick="SitRepListBox_MouseDoubleClick"
             MinWidth="480"
             MinHeight="320" />
  </Grid>
</UserControl>