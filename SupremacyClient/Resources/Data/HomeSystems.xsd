  <xs:complexType name="PlanetDescriptor">
    <xs:sequence>
      <xs:element name="Bonus"
                  minOccurs="0"
                  maxOccurs="unbounded">
        <xs:complexType>
          <xs:attribute name="Type"
                        type="PlanetBonus"/>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="Name"
                  type="xs:normalizedString"
                  use="optional"/>
    <xs:attribute name="Type"
                  type="s:PlanetType"
                  use="optional"/>
    <xs:attribute name="Size"
                  type="s:PlanetSize"
                  use="optional"/>
    <xs:attribute name="MinNumberOfPlanets"
                  type="xs:positiveInteger"
                  use="optional"/>
    <xs:attribute name="MaxNumberOfPlanets"
                  use="optional">
      <xs:simpleType>
        <xs:restriction base="xs:positiveInteger">
          <xs:maxInclusive value="10"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>
  <xs:complexType name="StarSystemDescriptor">
    <xs:sequence>
      <xs:element name="Inhabitants"
                  type="xs:normalizedString"
                  minOccurs="0"/>
      <xs:element name="Bonus"
                  minOccurs="0"
                  maxOccurs="unbounded">
        <xs:complexType>
          <xs:attribute name="Type"
                        type="SystemBonus"/>
        </xs:complexType>
      </xs:element>
      <xs:element name="Planets"
                  minOccurs="0">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="Planet"
                        type="PlanetDescriptor"
                        minOccurs="0"
                        maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="Name"
                  type="xs:normalizedString"
                  use="optional"/>
    <xs:attribute name="StarType"
                  type="s:StarTypeSupportingPlanets"
                  use="optional"/>
  </xs:complexType>
  <xs:element name="HomeSystems">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="HomeSystem"
                    minOccurs="0"
                    maxOccurs="unbounded">
          <xs:complexType>
            <xs:all>
              <xs:element name="StarSystem"
                          type="StarSystemDescriptor"/>
            </xs:all>
            <xs:attribute name="Civilization"
                          type="xs:token"
                          use="required"/>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
