                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Margin="4,0,0,0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left">
                                <TextBlock Foreground="RED"
                                            FontFamily="{DynamicResource {x:Static scc:ClientResources.HeaderFontFamilyKey}}"
                                            FontSize="14pt" 
                                            Text="Others Total FirePower: "/>
